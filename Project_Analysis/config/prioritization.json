{
    "version": "1.0",
    "description": "Configuration for issue prioritization",
    "severityWeights": {
        "critical": 100,
        "important": 50,
        "minor": 10
    },
    "categoryWeights": {
        "security": 2.0,
        "performance": 1.8,
        "accessibility": 1.5,
        "maintainability": 1.3,
        "typeSafety": 1.2,
        "style": 0.8,
        "documentation": 0.7
    },
    "impactFactors": {
        "userFacing": 1.5,
        "dataProcessing": 1.4,
        "coreFunction": 1.3,
        "internalTool": 0.9,
        "testCode": 0.8
    },
    "automationBonus": 1.2,
    "frequencyMultiplier": {
        "enabled": true,
        "threshold": 5,
        "factor": 1.5
    },
    "ageFactors": {
        "recentCode": {
            "threshold": 30,
            "factor": 1.2
        },
        "legacyCode": {
            "threshold": 365,
            "factor": 0.8
        }
    },
    "componentPriorities": {
        "default": 1.0,
        "highPriority": [
            {
                "pattern": "src/core/**",
                "factor": 1.5
            },
            {
                "pattern": "src/api/**",
                "factor": 1.4
            }
        ],
        "lowPriority": [
            {
                "pattern": "test/**",
                "factor": 0.7
            },
            {
                "pattern": "docs/**",
                "factor": 0.6
            }
        ]
    },
    "calculationFormula": "base_score = severity_weight * category_weight * impact_factor; final_score = base_score * (automation_bonus if automatable else 1.0) * (frequency_multiplier if frequent else 1.0) * age_factor * component_priority",
    "thresholds": {
        "immediate": 200,
        "high": 100,
        "medium": 50,
        "low": 10
    },
    "resourceAllocation": {
        "immediate": {
            "automatedFixes": 0.4,
            "manualFixes": 0.6
        },
        "high": {
            "automatedFixes": 0.7,
            "manualFixes": 0.3
        },
        "medium": {
            "automatedFixes": 0.9,
            "manualFixes": 0.1
        },
        "low": {
            "automatedFixes": 1.0,
            "manualFixes": 0.0
        }
    }
}