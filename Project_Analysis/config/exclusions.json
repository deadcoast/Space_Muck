{
    "version": "1.0",
    "description": "Configuration for excluding files and patterns from analysis",
    "excludePatterns": {
        "directories": [
            "node_modules/**",
            "dist/**",
            "build/**",
            "coverage/**",
            ".git/**",
            "**/.DS_Store",
            "tmp/**",
            "logs/**",
            "vendor/**",
            "third-party/**"
        ],
        "files": [
            "**/*.min.js",
            "**/*.min.css",
            "**/*.bundle.js",
            "**/*.bundle.css",
            "**/*.d.ts",
            "**/*.test.js",
            "**/*.test.ts",
            "**/*.spec.js",
            "**/*.spec.ts",
            "**/*.config.js",
            "**/*.lock",
            "package-lock.json",
            "yarn.lock"
        ],
        "patterns": [
            "**/__tests__/**",
            "**/__mocks__/**",
            "**/*.generated.*"
        ]
    },
    "excludeRules": {
        "all": [
            "no-console",
            "max-len"
        ],
        "test": [
            "no-magic-numbers",
            "require-await"
        ],
        "generated": [
            "max-lines",
            "complexity",
            "max-depth",
            "max-params"
        ],
        "legacy": [
            "no-var",
            "prefer-const",
            "prefer-rest-params",
            "prefer-spread"
        ]
    },
    "fileTypeSpecific": {
        "markdown": {
            "rules": [
                "max-line-length",
                "no-trailing-spaces"
            ]
        },
        "json": {
            "rules": [
                "indent",
                "quotes"
            ]
        },
        "yaml": {
            "rules": [
                "indent"
            ]
        }
    },
    "temporaryExclusions": {
        "files": [],
        "rules": [],
        "expiration": "2025-12-31",
        "reason": "Temporary exclusions for exceptional cases with documented reasons"
    },
    "conditionalExclusions": {
        "demoMode": {
            "files": [
                "src/demo/**"
            ],
            "rules": [
                "no-alert",
                "no-console"
            ]
        },
        "developmentMode": {
            "files": [],
            "rules": [
                "no-debugger"
            ]
        }
    },
    "gradualEnforcement": {
        "newFiles": {
            "enforceAll": true
        },
        "modifiedFiles": {
            "enforceAll": true,
            "excludeRules": [
                "max-lines",
                "max-statements"
            ]
        },
        "existingFiles": {
            "enforceAll": false,
            "includeRules": [
                "no-unused-vars",
                "no-undef",
                "eqeqeq"
            ]
        }
    }
}